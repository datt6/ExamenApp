@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Log In</title>
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        div {
            background-color: #1f1f1f;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 400px;
        }

        h2 {
            color: #ffffff;
            margin-bottom: 20px;
            text-align: center;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            color: #b0b0b0;
        }

        input {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #333;
            border-radius: 4px;
            background-color: #2c2c2c;
            color: #e0e0e0;
        }

        button {
            background-color: #6200ea;
            border: none;
            color: #ffffff;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 48%;
            margin-bottom: 15px; /* Espacio debajo de los botones */
        }

            button:first-of-type {
                margin-right: 4%; /* Espacio entre los botones */
            }

            button:last-of-type {
                background-color: #d32f2f;
                margin-right: 0;
            }

            button:hover {
                opacity: 0.9;
            }

        p {
            margin: 0;
            text-align: center;
        }

        a {
            color: #bb86fc;
            text-decoration: none;
            display: block;
            margin-top: 20px;
            text-align: center;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div>
        <h2>Ingreso</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <p>@ViewBag.ErrorMessage</p>
        }

        @using (Html.BeginForm("Autenticar", "Autenticacion", FormMethod.Post))
        {
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="username" required />

            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required />

            <button type="submit">Iniciar Sesión</button>
            <button type="button" onclick="window.location.href='@Url.Action("Autenticar", "Acceso")'">Cancelar</button>
        }

        <a href="@Url.Action("Registrar", "Acceso")">Registrar</a>
    </div>
</body>
</html>
